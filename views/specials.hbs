<header class="mdl-layout__header specials-header">
    <div class="mdl-layout__header-row">
        <!-- Title -->
        <span class="mdl-layout-title">{{h2}}</span>
        <div class="mdl-layout-spacer"></div>
    </div>
</header>

<!--<h2 class="padding">{{h2}}</h2>-->
<div class="flex-container">
    {{#each flyerData}}
        <div class="flyer-item">
            <div class="demo-card-square mdl-card mdl-shadow--2dp flyer-content">

                <div class="mdl-card__title mdl-card--expand photo"
                     style="background: url({{this.imageURL}}) center 15% no-repeat #fff;
                             height: 176px;
                             padding: 10px;
                             margin: 0 0 10px 0;
                             border-bottom: 1px solid rgba(128, 64, 0, 0.55);">

                </div>
                <div class="mdl-card__supporting-text brown">
                        {{this.name}}
                </div>

                <div class="action">
                    <div class="action-content">
                        <div class="mdl-card__supporting-text">

                            ${{this.salePrice}}/{{this.saleUom}}
                            <br>
                            {{this.tag}}

                        </div>
                        <button class="mdl-button
                                           mdl-js-button mdl-button--raised
                                           mdl-button--accent">
                            Add to Shopping List
                        </button>
                    </div>
                </div>
            </div>
        </div>
    {{/each}}
</div>
<script src="../scripts/specials.js"></script>