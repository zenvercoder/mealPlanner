<div class="flex-container">

    <div class="demo-card-wide mdl-card mdl-shadow--2dp grocery-list">
        <div class="mdl-card__title groceries">
            <h2 class="mdl-card__title-text">Grocery List</h2>
        </div>

        <div class="recipe-list brown">
                <ul>
                    <div class="grocery-list-item">

                    </div>
                </ul>
        </div>

        <div class="mdl-card__menu">
            <button class="mdl-button mdl-button--icon mdl-js-button mdl-js-ripple-effect">
                <i class="material-icons">done</i>
            </button>
        </div>
    </div>

    {{#each flyerData}}
        <div class="flyer-item">
            <div class="demo-card-square mdl-card mdl-shadow--2dp flyer-content">

                <div class="mdl-card__title mdl-card--expand photo"
                     style="background: url({{this.imageURL}}) center 15% no-repeat #fff;
                             height: 176px;
                             padding: 10px;
                             margin: 0 0 10px 0;
                             border-bottom: 1px solid rgba(128, 64, 0, 0.55);">

                </div>
                <div class="mdl-card__supporting-text brown">
                    {{this.name}}
                </div>

                <div class="action">
                    <div class="action-content">
                        <div class="mdl-card__supporting-text">

                            ${{this.salePrice}}/{{this.saleUom}}
                            <br>
                            {{this.tag}}

                        </div>
                        <button data-grocery-item="{{this.name}}" class="mdl-button
                                           mdl-js-button mdl-button--raised
                                           mdl-button--accent grocery-list-add">
                            Add to Grocery List
                        </button>
                    </div>
                </div>
            </div>
        </div>
    {{/each}}
</div>
<script src="../scripts/specials.js"></script>